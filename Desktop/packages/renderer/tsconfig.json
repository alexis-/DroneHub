{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "#preload": ["../preload/src/index"],
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@ext/*": ["./src/utils/extensions/*"],
      "@shared/*": ["../shared/src/*"],
      "@types/*": ["./src/types/*"],
      "@services/*": ["./src/services/*"],
      "@stores/*": ["./src/stores/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../../types/map.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
